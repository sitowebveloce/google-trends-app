<%- include ('partials/header-daily.ejs') %>
<a href="/catalog" class='home-link'>
    <img src="/img/home.svg" alt="home">
</a>
<div class="content">
    <a href="/trends/relatedtopics" class="trends-link">
        <img class="trends-img" src="/img/data-analysis.svg" alt="">
        <h1 class="title">Google Related Topics</h1>
    </a>
    <%
        let YYYY = new Date().getFullYear();
        let MM = (new Date().getMonth() + 1) < 10 ? '0' + (new Date().getMonth() + 1) : (new Date().getMonth() + 1);
        let DD = (new Date().getDate()) < 10 ? '0' + (new Date().getDate()) : (new Date().getDate());
        let ymd = YYYY + '-' + MM + '-' + DD;
    %>

    <form action="/trends/relatedtopics" method="POST" autocomplete="off">
        <label class="label-keyword" for="keyword"> Keyword</label>
        <input type="text" id="keyword" name="keyword" class="keyword" placeholder="Keyword" required>
        <label class="label-keyword" for="geo"> Geo</label>
        <input type="text" id="geo" name="geo" class="geo" placeholder="Geo" required>
        <label class="label-start" for="start">Start</label>
        <input type="date" id="start" name="start" value='<%- ymd %>' min="2010-05-01" max="2030-01-01" required>
        <button class="btn" type="submit">
            <img class="search-trends" src="/img/search.svg" alt="search">
        </button>
    </form>
    <div class="res">
        <div class="card">
            <div class="list">
                <% if(data[0].keyword !== undefined){ %>
                <strong> <%= data[0].keyword.toUpperCase() %> </strong>
                <% } %>
            </div>
        </div>

        <!-- LOOP THROUGH DATA  -->
        <% let count = 1  %>
        <% data.forEach(t => { %>
        <div class="card">
            <div class="list">
                <% if(t.topic !== undefined) { %>
                <div class="list-inside">
                    <span> <strong> <%= count++ %> </strong></span> <%=  t.topic %>
                </div>
                <% } %>
                <% if(t.value !== undefined){ %>
                <div class="list-inside">
                    <%=  t.value %>
                </div>
                <% } %>
                <% if(t.type !== undefined){ %>
                <div class="list-inside">
                    <%=  t.type %>
                </div>
                <% } %>
            </div>
            <!-- END LOOP  -->
            <% }) %>

        </div>
        <!-- END RES  -->
    </div>
    <!-- END CONTENT  -->
</div>

<%- include ('partials/footer.ejs')%>